    <div class="container">

		<table class="table table-striped table-hover ">
		    <thead>
		        <tr>
		            <th>name</th>
		            <th>Chapters</th>
		            <th>Edit</th>
		            <th>Delete</th>
		        </tr>
		    </thead>
		    <tbody>
		    	{% for chapitre in chapitres %}
			    	<tr class="success">
			            <td>
			            	<a href="{{ path('doc_index', {'slug' : chapitre.slug}) }}" target="_blank">
			            		{{ chapitre.name|slice(0, 50) }}
			            	</a>
			            </td>
			            <td> - </td>
			            <td><a href="{{ path('admin_delete_chapters', {'id' : chapitre.id}) }}">Delete</a></td>
			            <td><a href="{{ path('admin_update_chapters', {'id' : chapitre.id}) }}">Edit</a></td>
			        </tr>

			        {% for article in chapitre.articles %}
			        	<tr class="info">
				            <td>{{ article.name|slice(0, 50) }}</td>
				            <td>{{ article.chapitre|slice(0, 50) }}</td>
				            <td><a href="{{ path('admin_delete_articles', {'id' : article.id}) }}">Delete</a></td>
			            	<td><a href="{{ path('admin_update_articles', {'id' : article.id}) }}">Edit</a></td>
				        </tr>
			        {% endfor %}
			        <tr><td></td><td></td><td></td><td></td></tr>
			    {% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}

