{% extends '::base.html.twig' %}

{% block title %}Kebhub - Add doc Article{% endblock %}

{% block body %}
    <div class="container">
		
		<form name="form" method="post" action="">

			<div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">Article title</label>
                <div class="col-lg-10">
                    {{ form_errors(form.name) }}
					{{ form_widget(form.name) }}
                </div>
            </div>
			
            <div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">Article body</label>
                <div class="col-lg-10">
					{{ form_errors(form.text) }}
					{{ form_widget(form.text) }}
				</div>
			</div>

			<div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">Article chapter</label>
                <div class="col-lg-10">
					{{ form_errors(form.chapitre) }}
					{{ form_widget(form.chapitre) }}
				</div>
			</div>

			<div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label"></label>
                <div class="col-lg-10">
					{{ form_widget(form.save) }}
				</div>
			</div>

			{{ form_errors(form._token) }}
			{{ form_widget(form._token) }}

		</form>

	</div>
{% endblock %}

{% block javascripts %}

{% endblock %}